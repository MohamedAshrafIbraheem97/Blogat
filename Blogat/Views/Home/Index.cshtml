@model IEnumerable<Blogat.Models.Blog>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>All Blogs</h1>

</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xs-6 col-lg-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    @Html.DisplayFor(modelItem => item.Heading)
                </div>
                <div class="panel-body">
                    @StringHandlers.Limit(item.Body, 50)
                </div>
                <div class="panel-footer">
                    @Html.ActionLink("View Details »", "Details", "Blogs", new { item.Id }, new { @class = "btn btn-info btn-block" })

                </div>
            </div>
        </div>
        
     }
</div>
